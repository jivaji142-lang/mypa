# Database - PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/mypa_db

# Session Secret - Any random string (generate with: openssl rand -hex 32)
SESSION_SECRET=your-random-secret-string-here

# Razorpay Payment Keys (from https://dashboard.razorpay.com)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# Fast2SMS API Key for OTP (from https://www.fast2sms.com)
FAST2SMS_API_KEY=your_fast2sms_api_key_here

# Web Push VAPID Keys (generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Stripe Keys (optional - only if using Stripe payments)
# Get from https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
# STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx

# App Domain (your domain without https://, used for webhooks)
# Example: mypa.yourdomain.com
# APP_DOMAIN=mypa.yourdomain.com

# Server Port (default 5000)
PORT=5000

# Node Environment
NODE_ENV=production
